---
import { Image } from 'astro:assets';
import logo from '../../public/images/lighthouse-mentoring-logo.png';

const currentYear = new Date().getFullYear();

const footerLinks = {
  services: [
    { href: '/wellbeing-audit/', label: 'Wellbeing Audit' },
    { href: '/iso-45003/', label: 'ISO 45003 Framework' },
    { href: '/our-approach/', label: 'Human+AI Approach' },
  ],
  resources: [
    { href: '/insights/', label: 'Insights & Articles' },
    { href: '/psychosocial-hazards/', label: 'Psychosocial Hazards' },
    { href: '/stress-risk-assessment/', label: 'Stress Risk Management' },
  ],
  company: [
    { href: '/about/', label: 'About Craig Fearn' },
    { href: '/contact/', label: 'Contact Us' },
  ],
  legal: [
    { href: '/privacy/', label: 'Privacy Policy' },
    { href: '/terms/', label: 'Terms of Service' },
    { href: '/accessibility/', label: 'Accessibility' },
  ],
};
---

<footer class="bg-navy-900 text-white">
  <div class="container py-12 lg:py-16">
    <!-- Main Footer Content -->
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-6 lg:gap-8">
      <!-- Brand Column -->
      <div class="lg:col-span-1">
        <div class="flex items-center space-x-3 mb-4">
          <Image 
            src={logo}
            alt="Lighthouse Mentoring" 
            width={32} 
            height={32}
            format="webp"
            quality={90}
            loading="lazy"
          />
          <span class="font-display font-semibold text-lg">
            Lighthouse Mentoring
          </span>
        </div>
        <p class="text-sm text-gray-300 mb-4">
          ISO 45003-aligned wellbeing audits for UK SMEs. Combining human expertise with AI-enhanced analysis.
        </p>
        <div class="flex space-x-4">
          <a 
            href="https://www.linkedin.com/in/craigfearn/" 
            target="_blank" 
            rel="noopener noreferrer"
            class="text-gray-400 hover:text-white transition-colors"
            aria-label="LinkedIn"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
            </svg>
          </a>
        </div>
      </div>
      
      <!-- Services Column -->
      <div>
        <h3 class="font-display font-semibold text-sm uppercase tracking-wider mb-4 text-white">
          Services
        </h3>
        <ul class="space-y-2">
          {footerLinks.services.map(link => (
            <li>
              <a 
                href={link.href}
                class="text-sm text-gray-300 hover:text-white transition-colors no-style"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Resources Column -->
      <div>
        <h3 class="font-display font-semibold text-sm uppercase tracking-wider mb-4 text-white">
          Resources
        </h3>
        <ul class="space-y-2">
          {footerLinks.resources.map(link => (
            <li>
              <a 
                href={link.href}
                class="text-sm text-gray-300 hover:text-white transition-colors no-style"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Company Column -->
      <div>
        <h3 class="font-display font-semibold text-sm uppercase tracking-wider mb-4 text-white">
          Company
        </h3>
        <ul class="space-y-2">
          {footerLinks.company.map(link => (
            <li>
              <a 
                href={link.href}
                class="text-sm text-gray-300 hover:text-white transition-colors no-style"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- CTA Column -->
      <div class="lg:col-span-1">
        <h3 class="font-display font-semibold text-sm uppercase tracking-wider mb-4 text-white">
          Ready to Start?
        </h3>
        <p class="text-sm text-gray-300 mb-4">
          Book a free discovery call to discuss your wellbeing audit needs.
        </p>
        <a 
          href="/contact/"
          class="btn btn-primary w-full text-center text-sm"
        >
          Book Discovery Call
        </a>
        <p class="text-xs text-gray-400 mt-4">
          No obligation. 30-minute call.
        </p>
      </div>
    </div>
    
    <!-- Bottom Bar -->
    <div class="border-t border-navy-800 mt-12 pt-8">
      <div class="flex flex-col lg:flex-row justify-between items-center gap-4">
        <div class="text-sm text-gray-400 text-center lg:text-left">
          Â© {currentYear} Lighthouse Mentoring. All rights reserved.
        </div>
        {footerLinks.legal.length > 0 && (
          <div class="flex flex-wrap items-center justify-center gap-x-4 gap-y-2">
            {footerLinks.legal.map(link => (
              <a 
                href={link.href}
                class="text-xs text-gray-400 hover:text-white transition-colors no-style whitespace-nowrap"
              >
                {link.label}
              </a>
            ))}
          </div>
        )}
        <div class="flex items-center space-x-2 text-xs text-gray-400">
          <img 
            src="/images/craig-rsph-fellow-badge.jpg" 
            alt="RSPH Fellow" 
            width="30" 
            height="30"
            class="rounded flex-shrink-0"
            loading="lazy"
          />
          <span class="whitespace-nowrap">RSPH Fellow</span>
        </div>
      </div>
    </div>
  </div>
</footer>