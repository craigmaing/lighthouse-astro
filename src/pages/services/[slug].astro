---
import { getCollection, getEntry } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Hero from '../../components/Hero.astro';
import Button from '../../components/Button.astro';
import { CheckCircle, Clock, Users, Target, TrendingUp, Award } from 'lucide-astro';

export async function getStaticPaths() {
  const services = await getCollection('services');
  
  return services.map(service => ({
    params: { slug: service.data.slug },
    props: { service }
  }));
}

interface Props {
  service: CollectionEntry<'services'>;
}

const { service } = Astro.props;
const { data } = service;

// Format price for display
const formatPrice = (price: { from: number; to?: number; currency: string }) => {
  const formatter = new Intl.NumberFormat('en-GB', {
    style: 'currency',
    currency: price.currency,
    minimumFractionDigits: 0
  });
  
  if (price.to) {
    return `${formatter.format(price.from)} - ${formatter.format(price.to)}`;
  }
  return `From ${formatter.format(price.from)}`;
};

// Get other services for cross-selling
const allServices = await getCollection('services');
const otherServices = allServices
  .filter(s => s.data.slug !== data.slug)
  .sort((a, b) => a.data.order - b.data.order);

// Meta tags for SEO
const title = `${data.title} | Lighthouse Mentoring`;
const description = data.description;
const canonical = `https://lighthousementoring.co.uk/services/${data.slug}`;
---

<Layout title={title} description={description} canonical={canonical}>
  <Hero
    title={data.title}
    subtitle={data.description}
    variant="secondary"
  />
  
  <section class="py-20 px-4">
    <div class="container mx-auto max-w-7xl">
      <div class="grid lg:grid-cols-3 gap-12">
        <!-- Main Content -->
        <div class="lg:col-span-2 space-y-12">
          <!-- Features Section -->
          <div>
            <h2 class="text-3xl font-bold mb-6 flex items-center gap-3">
              <CheckCircle class="w-8 h-8 text-emerald-600" />
              What's Included
            </h2>
            <ul class="grid md:grid-cols-2 gap-4">
              {data.features.map((feature) => (
                <li class="flex items-start gap-3">
                  <CheckCircle class="w-5 h-5 text-emerald-600 mt-0.5 flex-shrink-0" />
                  <span class="text-gray-700">{feature}</span>
                </li>
              ))}
            </ul>
          </div>
          
          <!-- Deliverables Section -->
          <div>
            <h2 class="text-3xl font-bold mb-6 flex items-center gap-3">
              <Award class="w-8 h-8 text-emerald-600" />
              Deliverables
            </h2>
            <ul class="space-y-3">
              {data.deliverables.map((deliverable) => (
                <li class="flex items-start gap-3 p-4 bg-gray-50 rounded-lg">
                  <TrendingUp class="w-5 h-5 text-emerald-600 mt-0.5 flex-shrink-0" />
                  <span class="text-gray-700">{deliverable}</span>
                </li>
              ))}
            </ul>
          </div>
          
          <!-- Ideal For Section -->
          <div class="p-6 bg-emerald-50 rounded-xl border border-emerald-200">
            <h3 class="text-2xl font-bold mb-4 flex items-center gap-3">
              <Users class="w-7 h-7 text-emerald-600" />
              Ideal For
            </h3>
            <p class="text-gray-700 leading-relaxed">{data.ideal_for}</p>
          </div>
        </div>
        
        <!-- Sidebar -->
        <div class="lg:col-span-1">
          <!-- Pricing Card -->
          <div class="sticky top-8 space-y-6">
            <div class="bg-white rounded-xl shadow-xl border border-gray-200 overflow-hidden">
              {data.popular && (
                <div class="bg-emerald-600 text-white text-center py-2 text-sm font-semibold">
                  MOST POPULAR
                </div>
              )}
              <div class="p-8 space-y-6">
                <div>
                  <p class="text-gray-600 mb-2">Investment</p>
                  <p class="text-3xl font-bold text-gray-900">
                    {formatPrice(data.price)}
                  </p>
                  {data.price.to && (
                    <p class="text-sm text-gray-500 mt-1">
                      *Price varies based on organization size
                    </p>
                  )}
                </div>
                
                <div class="space-y-4 py-4 border-y border-gray-200">
                  <div class="flex items-center gap-3">
                    <Clock class="w-5 h-5 text-gray-400" />
                    <div>
                      <p class="text-sm text-gray-600">Timeline</p>
                      <p class="font-semibold">{data.timeline}</p>
                    </div>
                  </div>
                  
                  <div class="flex items-center gap-3">
                    <Target class="w-5 h-5 text-gray-400" />
                    <div>
                      <p class="text-sm text-gray-600">Format</p>
                      <p class="font-semibold">Remote & On-site</p>
                    </div>
                  </div>
                </div>
                
                <div class="space-y-3">
                  <Button
                    href="/contact"
                    variant="primary"
                    size="large"
                    class="w-full justify-center"
                  >
                    {data.cta_text}
                  </Button>
                  
                  <Button
                    href="/contact?type=consultation"
                    variant="ghost"
                    size="medium"
                    class="w-full justify-center"
                  >
                    Schedule Free Consultation
                  </Button>
                </div>
                
                <p class="text-xs text-gray-500 text-center">
                  No obligation • 30-minute call • Expert advice
                </p>
              </div>
            </div>
            
            <!-- Trust Indicators -->
            <div class="bg-gray-50 rounded-xl p-6 space-y-4">
              <h4 class="font-semibold text-gray-900">Why Choose Lighthouse?</h4>
              <ul class="space-y-3 text-sm">
                <li class="flex items-start gap-2">
                  <CheckCircle class="w-4 h-4 text-emerald-600 mt-0.5 flex-shrink-0" />
                  <span>ISO 45003 certified expertise</span>
                </li>
                <li class="flex items-start gap-2">
                  <CheckCircle class="w-4 h-4 text-emerald-600 mt-0.5 flex-shrink-0" />
                  <span>AI-enhanced analysis</span>
                </li>
                <li class="flex items-start gap-2">
                  <CheckCircle class="w-4 h-4 text-emerald-600 mt-0.5 flex-shrink-0" />
                  <span>30+ years experience</span>
                </li>
                <li class="flex items-start gap-2">
                  <CheckCircle class="w-4 h-4 text-emerald-600 mt-0.5 flex-shrink-0" />
                  <span>100% satisfaction guarantee</span>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Other Services -->
  {otherServices.length > 0 && (
    <section class="py-20 px-4 bg-gray-50">
      <div class="container mx-auto max-w-7xl">
        <h2 class="text-3xl font-bold mb-12 text-center">Other Services You May Need</h2>
        <div class="grid md:grid-cols-2 gap-8">
          {otherServices.map((otherService) => (
            <a
              href={`/services/${otherService.data.slug}`}
              class="block p-6 bg-white rounded-xl shadow-md hover:shadow-xl transition-shadow border border-gray-200"
            >
              <h3 class="text-xl font-bold mb-2">{otherService.data.title}</h3>
              <p class="text-gray-600 mb-4 line-clamp-2">{otherService.data.description}</p>
              <div class="flex items-center justify-between">
                <span class="text-emerald-600 font-semibold">
                  {formatPrice(otherService.data.price)}
                </span>
                <span class="text-sm text-gray-500">
                  {otherService.data.timeline}
                </span>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>
  )}
  
  <!-- CTA Section -->
  <section class="py-20 px-4 bg-emerald-600">
    <div class="container mx-auto max-w-4xl text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
        Ready to Transform Your Workplace Wellbeing?
      </h2>
      <p class="text-xl text-emerald-100 mb-8">
        Join hundreds of organizations that have improved their workplace culture with our expert guidance.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button
          href="/contact"
          variant="secondary"
          size="large"
        >
          Get Started Today
        </Button>
        <Button
          href="/insights"
          variant="ghost"
          size="large"
          class="!text-white hover:!bg-emerald-700"
        >
          Learn More About ISO 45003
        </Button>
      </div>
    </div>
  </section>
</Layout>

<style>
  .line-clamp-2 {
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }
</style>