  <!-- Why Choose Us -->
  <section class="section bg-gray-50">
    <div class="container px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl lg:text-4xl font-display font-bold text-navy-900 mb-8 text-center">
          Why Choose Lighthouse Mentoring?
        </h2>
        
        <div class="grid md:grid-cols-2 gap-8 mb-12">
          <div class="space-y-4">
            <Card>
              <div class="flex items-start space-x-3">
                <svg class="w-6 h-6 text-teal-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
