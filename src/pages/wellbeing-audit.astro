const auditProcess = [
  {
    week: "Week 1",
    phase: "Discovery & Planning",
    activities: [
      "Initial consultation and scoping",
      "Stakeholder engagement",
      "Communication plan development",
      "Survey customisation"
    ]
  },
  {
    week: "Week 2",
    phase: "Data Collection",
    activities: [
      "Launch employee survey",
      "Conduct leadership interviews",
      "Focus groups and observations",
      "Document review"
    ]
  },
  {
