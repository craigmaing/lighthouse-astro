---
import { Image } from 'astro:assets';
import Layout from '../layouts/Layout.astro';
import Button from '../components/Button.astro';
import Card from '../components/Card.astro';
import { testimonials } from '../data/testimonials.js';

// Import images
import wellbeingHeroImage from '../../public/images/Gemini_Generated_Image_bedcy9bedcy9bedc.png';

// Get relevant testimonials
const testimonial1 = testimonials.find(t => t.name === "Chris Saxby");
const testimonial2 = testimonials.find(t => t.name === "Phil Tottman");

const auditComponents = [
  {
    title: "Leadership & Culture Assessment",
    description: "Evaluate leadership commitment to wellbeing and organisational culture",
    includes: [
